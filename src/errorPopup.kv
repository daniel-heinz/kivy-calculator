<ErrorPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Evaluation Error'

    BoxLayout:
        orientation: 'vertical'
        spacing: 8

        BoxLayout:
            orientation: 'horizontal'
            spacing: 2

            Image:
                size_hint: (None, None)
                width: 48
                height: 48
                source: '../res/img/critical.png'

            Label:
                size_hint_y: None
                height: 48
                text: root.ErrorHeader
                valign: 'middle'

        TextInput:
            readonly: True
            hint_text: 'Error Msg'
            foreground_color: [1.0, 0.0, 0.0, 0.6]
            text: root.ErrorMsg

        Button:
            text: "Dismiss"
            on_press: root.dismiss()