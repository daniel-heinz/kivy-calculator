<Numpad>:
    rows: 5
    cols: 4
    spacing: 5
    padding: 5

    Button:
        text: '[b]AC[/b]'
        markup: True
        on_press: root.calc_bar.clear_value()
    Button:
        text: '/'
        on_press: root.calc_bar.update_display('/')
    Button:
        text: '*'
        on_press: root.calc_bar.update_display('*')
    Button:
        text: '-'
        on_press: root.calc_bar.update_display('-')
    Button:
        text: '7'
        on_press: root.calc_bar.update_display('7')
    Button:
        text: '8'
        on_press: root.calc_bar.update_display('8')
    Button:
        text: '9'
        on_press: root.calc_bar.update_display('9')
    Button:
        text: '+'
        on_press: root.calc_bar.update_display('+')
    Button:
        text: '4'
        on_press: root.calc_bar.update_display('4')
    Button:
        text: '5'
        on_press: root.calc_bar.update_display('5')
    Button:
        text: '6'
        on_press: root.calc_bar.update_display('6')
    Button:
        text: '[i]x**y[/i]'
        markup: True
        on_press: root.calc_bar.update_display('**')
    Button:
        text: '1'
        on_press: root.calc_bar.update_display('1')
    Button:
        text: '2'
        on_press: root.calc_bar.update_display('2')
    Button:
        text: '3'
        on_press: root.calc_bar.update_display('3')
    Button:
        text: '[i]sqrt(x)[/i]'
        markup: True
        on_press: root.calc_bar.update_display('sqrt')
    Button:
        text: '[i](...)[/i]'
        markup: True
        on_press: root.calc_bar.update_display('()')
    Button:
        text: '0'
        on_press: root.calc_bar.update_display('0')
    Button:
        text: '.'
        on_press: root.calc_bar.update_display('.')
    Button:
        text: '[b]=[/b]'
        markup: True
        on_press: root.calc_bar.exec_calc()